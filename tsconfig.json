{
  "extends": "@tsconfig/node12/tsconfig.json",
  "include": [
    "src"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "removeComments": false,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true
  },
}